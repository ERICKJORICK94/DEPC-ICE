<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_person_24"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/Black"
            android:text="AGENDA PEDIDOS"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="VENDEDOR: "
            android:textColor="@color/Black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RICHARD ASENCIO"
            android:id="@+id/vendedor"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="CÃ“DIGO: "
            android:textColor="@color/Black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:id="@+id/cod_vendedor"
            android:layout_marginStart="10dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingEnd="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.6"
            android:background="@drawable/border_spinner"
            android:layout_marginEnd="5dp">

            <Spinner
                android:id="@+id/spinner_mes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dialog"></Spinner>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.4"
            android:background="@drawable/border_spinner">

            <Spinner
                android:id="@+id/spinner_anio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dialog"></Spinner>

        </RelativeLayout>
    </LinearLayout>


    <com.smartapp.depc_ice.Utils.CalendarCustomView
        android:id="@+id/custom_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.smartapp.depc_ice.Utils.CalendarCustomView>


</LinearLayout>
