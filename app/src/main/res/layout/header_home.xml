<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_fondo">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0dp">


            <RelativeLayout
                android:id="@+id/sincronizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_sync"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/shaper_circular"
                    android:padding="8dp"
                    android:src="@drawable/sincronizar" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_sync"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Sincronizar"
                    android:textColor="#E64A19"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cant_sincro"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/shaper_circular_red"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/White"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/novedades"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/shaper_circular"
                    android:padding="8dp"
                    android:src="@drawable/novedades" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Novedades"
                    android:textColor="#E64A19"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/shaper_circular"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_acerca_de" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Acerca de"
                    android:textColor="#E64A19"
                    android:textSize="11sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/shaper_circular"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:src="@drawable/close" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Cerrar sesiÃ³n"
                    android:textColor="#E64A19"
                    android:textSize="11sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="4dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/usuariio"
                    android:padding="10dp"
                    app:civ_border_color="@color/LightGrey"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_weight="1">


                           <TextView
                               android:id="@+id/vendedor"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:gravity="center_vertical"
                               android:text="RICHARD ASENCIO VARGAS"
                               android:textColor="@color/colorPrimary"
                               android:textSize="15sp"
                               android:textStyle="bold" />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="ECUADOR"
                               android:textColor="@color/colorPrimary"
                               android:textSize="12sp" />

                           <TextView
                               android:id="@+id/txt_imei"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="IMEI: "
                               android:textColor="@color/DarkGray"
                               android:textSize="11sp" />

                       </LinearLayout>

                        <Button
                            android:id="@+id/configurar_impresora"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Configurar"
                            android:textColor="@color/White"
                            android:background="@drawable/button_background"
                            android:drawableEnd="@drawable/ic_local_printshop_black_24dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="12sp"
                            android:drawableTint="@color/White"
                            android:drawablePadding="10dp"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:elevation="4sp"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ventas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 0.00"
                                android:textColor="@color/White"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Ventas"
                                android:textColor="@color/White"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:layout_marginTop="3dp">


                            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                                android:id="@+id/progress_ventas"
                                android:layout_width="match_parent"
                                android:layout_height="17dp"
                                app:rcBackgroundColor="@color/DarkGray"
                                app:rcBackgroundPadding="2dp"
                                app:rcMax="100"
                                app:rcProgress="50"
                                app:rcProgressColor="@color/colorNaranja"
                                app:rcRadius="10dp" />

                            <TextView
                                android:id="@+id/txt_porcentaje"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="50%"
                                android:textColor="@color/White"
                                android:textSize="11sp" />

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                        <TextView
                            android:id="@+id/presupuesto"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="$ 0,00"
                            android:textColor="@color/White"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:layout_marginEnd="5dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="presupuesto"
                                android:textColor="@color/White"
                                android:textSize="11sp"
                                android:gravity="right"
                                android:textStyle="italic" />



                        </LinearLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:elevation="4sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/cobranza"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 0.00"
                                android:textColor="@color/White"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Entregas"
                                android:textColor="@color/White"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:layout_marginTop="3dp">


                            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="17dp"
                                app:rcBackgroundColor="@color/DarkGray"
                                app:rcBackgroundPadding="2dp"
                                app:rcMax="100"
                                app:rcProgress="20"
                                app:rcProgressColor="@color/colorNaranja"
                                app:rcRadius="10dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="20%"
                                android:textColor="@color/White"
                                android:textSize="11sp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="3dp"
                            android:visibility="invisible"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/cobrar"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="$ 0,00"
                                android:textColor="@color/White"
                                android:textSize="12sp"
                                android:gravity="right"
                                android:layout_marginEnd="5dp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="presupuesto"
                                android:textColor="@color/White"
                                android:textSize="12sp"
                                android:gravity="right"
                                android:textStyle="italic" />



                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/refrescar_efectividad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:elevation="4sp"
                    android:src="@drawable/refresh" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_ver_datos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="VER TODOS LOS DATOS"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/RoyalBlue"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/arrow_rigth"
                    android:scaleType="centerInside"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
