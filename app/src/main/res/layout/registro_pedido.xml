                android:layout_marginLeft="10dp"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE:"
                android:textColor="@color/Black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp" />

            <EditText
